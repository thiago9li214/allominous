<div class="minouboard-navbar">
  <%= link_to "Mes Minous", minouboard_path, :class => current_class?(minouboard_path) %>
  <%= link_to "Mes emprunts", emprunts_path, :class => current_class?(emprunts_path) %>
  <%= link_to "Historique", historique_path, :class => current_class?(historique_path) %>
</div>

<div class="wrapper">
  <div class="container">

      <h3>Mes anciennes locations (work in progress)</h3>
      <!-- Boucle sur les rentals du user -->
      <ul class="inbox">
        <% @rentals.each do |rental| %>

          <li class="message">
            <div class="avatar-box">
              <%= image_tag rental.minou.photo, height: 120, width: 120, crop: :center, class: "big-avatar" %>
              <%= image_tag rental.user.photo, height: 50, width: 50, crop: :center, class: "small-avatar" %>
            </div>

            <div class="message-details">
              <h2> <%= rental.minou.name %> </h2>
              <p> <%= rental.user.first_name %> <%= rental.user.last_name %></p>
            </div>
            <div class="message-content">
              <h2> <%= rental.begin_date.strftime("%e %b") %> <i class="fas fa-arrow-right"></i> <%= rental.end_date.strftime("%e %b") %></h2>
              <p>I am not sure yet! I might be in Shanghai at this moment... Can I tell you later?</p>
            </div>
            <div class="message-status">
              <h2><%= rental.rental_price %> MinouCoins <%= image_tag "logo.png", height: 18 %> </h2>
              <p> Accepted</p>
            </div>
          </li>

        <% end %>

      </ul>

  </div>
</div>
