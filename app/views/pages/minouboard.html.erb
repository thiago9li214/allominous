<div class="wrapper">
  <div class="container">
    <h1 class="container_titles">Mes minous</h1>
    <div class="row minou_container">
      <% @minous.each do |minou| %>
        <%= link_to minou_path(minou) do %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card">
              <div class="card_body" style='background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url("https://source.unsplash.com/500x500/?kitten,<%=minou.name%>");'>
                <h1 class="card_title"><%= minou.name %></h1>
                <p class="dash_card_actions">
                  <%= link_to minou, method: :delete, data: { confirm: 'Are you sure?'} do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                  <%= link_to minou, method: :delete, data: { confirm: 'Are you sure?'} do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </p>
              </div>
              <div class="card_content">
                <p id="specie"><%= minou.specie %></p>
                <p id="personality"><%= minou.personality %></p>
                <p id="price"><%= minou.daily_price %> Kitokens par jour</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <h1 class="container_titles">Minous hébergés</h1>
    <div class="row minou_container">
      <% @rentals.each do |rental| %>
        <%= link_to minou_path(rental.minou) do %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card">
              <div class="card_body" style='background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url("https://source.unsplash.com/500x500/?kitten,<%=rental.minou.name%>");'>
                <h1 class="card_title"><%= rental.minou.name %></h1>
                <p id="loc_dates"> Du : <%= rental.begin_date %> au : <%= rental.end_date %></p>
              </div>
              <div class="card_content">
                <p id="specie"><%= rental.minou.specie %></p>
                <p id="personality"><%= rental.minou.personality %></p>
  <!--               <p id="desc"><%= rental.minou.description %></p>
   -->            </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
